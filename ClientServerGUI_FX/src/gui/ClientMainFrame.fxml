<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.ClientMainFrameController"
            prefWidth="600" prefHeight="400">
    <children>

        <TableView fx:id="ordersTable" layoutX="25" layoutY="25" prefWidth="550" prefHeight="200" />

        <Label layoutX="25" layoutY="240" text="Order Number:"/>
        <TextField fx:id="orderNumberField" layoutX="120" layoutY="235" prefWidth="100"/>

        <Label layoutX="250" layoutY="240" text="Parking Space:"/>
        <TextField fx:id="parkingSpaceField" layoutX="350" layoutY="235" prefWidth="100"/>

        <Label layoutX="25" layoutY="280" text="Order Date (YYYY-MM-DD):"/>
        <TextField fx:id="orderDateField" layoutX="200" layoutY="275" prefWidth="150"/>

        <Button fx:id="loadBtn" text="Load Orders" layoutX="25" layoutY="320" onAction="#loadOrders"/>
        <Button fx:id="updateBtn" text="Update Order" layoutX="150" layoutY="320" onAction="#updateOrder"/>
        <Button fx:id="exitBtn" text="Exit" layoutX="280" layoutY="320" onAction="#exitApp"/>

        <Label fx:id="statusLabel" layoutX="25" layoutY="360" style="-fx-text-fill: green;"/>

    </children>
</AnchorPane>
